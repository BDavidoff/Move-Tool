@{
    if(IsPost) {
			string usr = Request["usr"];
			string pwd = Request["pwd"];

			if(WebSecurity.Login(usr, pwd)) {
				Response.Redirect("~/mainSite/ControlHub.cshtml");
			} else {
				Response.Write("failed to login");
			}
    }
}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Sign In</title>
    </head>
    <body>
				<h1>Enter Login Information</h1>
				<form action="Default.cshtml" method="post">
					User Name: <input type="text" name="usr" /><br />
					Password: <input type="password" name="pwd" />
					<input type="submit" value="Sign In" />
				</form>
    </body>
</html>
